{
  "routes": [
    {
      "route": "/api/assistants/threads/:threadId/messages",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "rewrite": "/api/assistants/threads/[threadId]/messages"
    },
    {
      "route": "/api/assistants/threads/:threadId",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "rewrite": "/api/assistants/threads/[threadId]"
    },
    {
      "route": "/api/assistants/files/*",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "rewrite": "/api/assistants/files"
    },
    {
      "route": "/api/files/*",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "rewrite": "/api/files/[fileId]"
    },
    {
      "route": "/api/assistants",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "rewrite": "/api/assistants"
    },
    {
      "route": "/_next/static/*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/static/*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/",
      "rewrite": "/.next/server/app/index.html"
    },
    {
      "route": "/*",
      "rewrite": "/.next/server/app/*"
    }
  ],
  "navigationFallback": {
    "rewrite": "/.next/server/app/index.html",
    "exclude": [
      "/_next/*",
      "/static/*",
      "/api/*",
      "/*.{ico,png,jpg,gif}",
      "/*.{css,scss,js,json}"
    ]
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: *.azurestaticapps.net *.azure.com fonts.gstatic.com fonts.googleapis.com; font-src 'self' fonts.gstatic.com fonts.googleapis.com; style-src 'self' 'unsafe-inline' fonts.googleapis.com; connect-src 'self' *.azurestaticapps.net *.azure.com api.openai.com",
    "cache-control": "no-cache, no-store, must-revalidate",
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
    "Access-Control-Allow-Headers": "Content-Type, Authorization"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css",
    ".html": "text/html",
    ".ico": "image/x-icon",
    ".woff": "font/woff",
    ".woff2": "font/woff2"
  },
  "platform": {
    "apiRuntime": "node:20"
  },
  "trailingSlash": "auto"
} 